<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383839"
    android:orientation="vertical">

    <TextView

        android:id="@+id/instantiate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="#acacac"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <EditText
        android:id="@+id/instantiate_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter the duration"
        android:inputType="number" />

    <EditText
        android:id="@+id/instantiate_capacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter the capacity"
        android:inputType="number" />

    <EditText
        android:id="@+id/instantiate_queue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter the holding queue size"
        android:inputType="number" />

    <Button
        android:id="@+id/instantiate_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHECK" />

</LinearLayout>